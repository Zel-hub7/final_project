<!-- app/views/students/license_status.html.erb -->
<h1 class="text-center my-4">License Status</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <% if @license %>
        <div class="alert alert-success" role="alert">
          Your license is ready.
        </div>
      <% else %>
        <div class="alert alert-warning" role="alert">
          Your license is not ready yet.
        </div>
      <% end %>
    </div>
  </div>
</div>
