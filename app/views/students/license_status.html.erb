<!-- app/views/students/license_status.html.erb -->
<h1 class="text-center my-4 text-white">License Status</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @license %>
        <div class="card bg-dark text-white">
          <div class="card-header bg-secondary">
            <h4 class="mb-0">Your License Details</h4>
          </div>
          <div class="card-body">
            <table class="table table-dark table-bordered">
              <tbody>
                <tr class="table-<%= cycle('black', 'silver') %>">
                  <th scope="row">Name:</th>
                  <td><%= @student.FirstName %> <%= @student.LastName %></td>
                </tr>
                <tr class="table-<%= cycle('black', 'silver') %>">
                  <th scope="row">Category:</th>
                  <td><%= @student.category %></td>
                </tr>
                <tr class="table-<%= cycle('black', 'silver') %>">
                  <th scope="row">License Number:</th>
                  <td><%= @license.license_number %></td>
                </tr>
                <tr class="table-<%= cycle('black', 'silver') %>">
                  <th scope="row">Expiration Date:</th>
                  <td><%= @license.expiration_date.strftime("%B %d, %Y") %></td>
                </tr>
                <!-- Add any other details you want to display here -->
              </tbody>
            </table>
          </div>
        </div>
      <% else %>
        <div class="alert alert-warning" role="alert">
          Your license is not ready yet.
        </div>
      <% end %>
    </div>
  </div>
</div>
