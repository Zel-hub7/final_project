<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10 text-center">
      <h1 class="display-4 mb-4"><%= @school_name %> Students' Test Scores</h1>
      <% if @students.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="thead-dark">
              <tr>
             
                <th>First Name</th>
                <th>Last Name</th>
       
                <th>Category</th>
        
                <th>Test Status</th>
                <th>Theory Exam</th>
                <th>Practical Exam</th>
              </tr>
            </thead>
            <tbody>
              <% @students.each do |student| %>
                <tr>
            
                  <td><%= student.FirstName %></td>
                  <td><%= student.LastName %></td>
            
                  <td><%= student.category %></td>
       
                  <% if student.tests.any? %>
                    <% student.tests.each do |test| %>
                      <td><%= test.status %></td>
                      <td><%= test.theory_exam %></td>
                      <td><%= test.practical_exam %></td>
                    <% end %>
                  <% else %>
                    <td colspan="3">No test results available</td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="lead">No students available.</p>
      <% end %>
    </div>
  </div>
</div>
