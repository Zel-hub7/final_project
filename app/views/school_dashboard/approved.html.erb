<h1>Approved Students for <%= @school_name %></h1>

<%= form_with url: mark_students_path, method: :post do %>
  <table>
    <thead>
      <tr>
        <th>Mark</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th>Category</th>
      </tr>
    </thead>
    <tbody>
      <% @approved_students.each do |student| %>
        <tr>
          <td><%= check_box_tag "student_ids[]", student.id %></td>
          <td><%= student.FirstName %></td>
          <td><%= student.LastName %></td>
          <td><%= student.phone_number %></td>
          <td><%= student.category %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= submit_tag "Mark as Started" %>
<% end %>
