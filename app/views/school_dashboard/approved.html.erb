<h1>Approved Students for <%= @school_name %></h1>

<%= form_with url: mark_students_path, method: :post do |form| %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Mark</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Phone Number</th>
          <th scope="col">Category</th>
        </tr>
      </thead>
      <tbody>
        <% @approved_students.each do |student| %>
          <% unless student.session == 'started' %>
            <tr>
              <td><%= form.check_box :student_ids, { multiple: true }, student.id, nil %></td>
              <td><%= student.FirstName %></td>
              <td><%= student.LastName %></td>
              <td><%= student.phone_number %></td>
              <td><%= student.category %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="text-center">
    <%= form.submit "Mark as Started", class: "btn btn-primary" %>
  </div>
<% end %>
